<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/pic_bg_ch_style"
    >

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/iv_open_album"
        android:layout_centerInParent="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@mipmap/ic_launcher"
        />

    <com.anybeen.mark.imageeditor.view.ColorfulSeekBar
        android:id="@+id/cs"
        android:layout_below="@+id/iv_open_album"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:thumb="@mipmap/icon_seek_bar_thumb_image_editor"
        android:background="@android:color/holo_purple"
        />
</RelativeLayout>
