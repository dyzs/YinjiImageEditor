<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    >

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/iv_open_album"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@mipmap/ic_launcher"
        android:scaleType="fitXY"
        />

    <com.anybeen.mark.imageeditor.view.ColorfulSeekBar
        android:id="@+id/cs"
        android:layout_below="@+id/iv_open_album"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:thumb="@mipmap/icon_seek_bar_thumb_image_editor"
        android:background="@android:color/holo_purple"
        />

    <com.anybeen.mark.imageeditor.view.CornerImageView
        android:id="@+id/civ"
        android:layout_below="@+id/cs"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:circleRadius="20dp"
        app:pureColor="@android:color/darker_gray"
        />

    <com.anybeen.mark.imageeditor.view.CornerImageView
        android:id="@+id/iv_card_image"
        android:layout_toRightOf="@+id/civ"
        android:layout_below="@+id/cs"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:circleRadius="35dp"
        app:pureColor="@android:color/darker_gray"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_test_iv"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_below="@id/civ"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        fresco:placeholderImage="@android:color/holo_purple"
        />

</RelativeLayout>
